#!/bin/bash
#
# .bash_paths

[[ -f ~/.path ]] && source ~/.path

# Directories to be appended to PATH.
declare -a append_dirs=(
  '/usr/bin'
  "${HOME}/bin"
  "${DOTFILES_PATH}/bin"
)

for index in ${!append_dirs[*]}; do
  if [[ -d ${append_dirs[$index]} ]]; then
    PATH="${PATH}:${append_dirs[$index]}"
  fi
done

unset append_dirs

export PATH

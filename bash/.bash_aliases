# .bash_aliases

# Allow aliases to be with sudo
alias sudo="sudo "

# Easier navigation
alias ..="cd .."
alias ...="cd ..."
alias ~="cd ~"
alias -- -="cd -"

# List directory
alias l="ls -CF"
alias la="ls -A --group-directories-first"
alias ll="ls -alF --group-directories-first"

# Clear screen
alias cls="clear"
